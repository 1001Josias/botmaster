{
  "name": "botmaster",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --config packages/eslint-config/.prettierrc.js --write .",
    "format:check": "turbo format:check",
    "test": "turbo run test",
    "prepare": "husky",
    "test:affected": "turbo run test --filter='[HEAD^1]'",
    "type-check:all": "turbo run type-check",
    "security:scan": "turbo run security:scan",
    "bundle:analyze": "turbo run bundle:analyze"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.1"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=21"
  },
  "pnpm": {
    "overrides": {
      "next@>=14.0.0 <14.2.10": ">=14.2.10",
      "next@>=10.0.0 <14.2.7": ">=14.2.7",
      "@eslint/plugin-kit@<0.2.3": ">=0.2.3",
      "next@>=9.5.5 <14.2.15": ">=14.2.15",
      "next@>=14.0.0 <14.2.21": ">=14.2.21",
      "esbuild@<=0.24.2": ">=0.25.0",
      "next@>=14.0.0 <14.2.25": ">=14.2.25",
      "prettier": "^3.5.3"
    }
  }
}
