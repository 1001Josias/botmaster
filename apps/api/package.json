{
  "name": "api",
  "version": "1.0.14",
  "description": "The BotMaster API",
  "author": "Edwin Hernandez",
  "repository": "edwinhern/express-typescript-2024",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "lint": "eslint ./",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --config ./node_modules/@repo/eslint-config/.prettierrc --write .",
    "test": "vitest run",
    "prepare": "husky",
    "migrations": "chmod +x src/scripts/run-migrations.sh && src/scripts/run-migrations.sh",
    "migrations:up": "pnpm migrations up",
    "migrations:down": "pnpm migrations down",
    "migrations:list": "pnpm migrations:list:up && pnpm migrations:list:down",
    "migrations:list:up": "echo up: && find src/api -name '*.up.sql' | sort -n",
    "migrations:list:down": "echo down: && find src/api -name '*.down.sql' | sort -n"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "pg": "^8.13.1",
    "pino": "^9.4.0",
    "pino-http": "^10.0.0",
    "swagger-themes": "^1.4.3",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^9.10.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.4.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
